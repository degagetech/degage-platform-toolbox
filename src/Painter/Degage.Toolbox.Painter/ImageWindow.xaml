<UserControl x:Class="Degage.Toolbox.Painter.ImageWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Degage.Toolbox.Painter"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">

    <Grid >
        <Button x:Name="_btnClose" HorizontalAlignment="Right" Width="10" RenderTransformOrigin="2.75,1" Height="10" VerticalAlignment="Top" Margin="0,2,2,0" />
        <Border BorderBrush="#FF867B7B" BorderThickness="1" HorizontalAlignment="Left" Height="100" Margin="0" VerticalAlignment="Top" Width="100">
            <Image x:Name="_image" Stretch="Uniform" Cursor='Hand' Width="99" Height="99">

            </Image>
        </Border>

    </Grid>
</UserControl>
